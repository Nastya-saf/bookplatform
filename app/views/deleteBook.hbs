<div class="row">
    <div class="col-9">
        <div class="row">
            <h3>Удалить книгу</h3>
        </div>
        {{#if Books}}
        {{#each Books}}
        <div class="row align-items-center mt-4 py-2" style="border: 2px solid #dee2e6; background-color: #e3effd;">
            <div class="col-2">
                <figure class="figureIndex rounded mx-auto d-block">
                    <img src="../{{this.photoBooks.0.URL}}" class="rounded mx-auto d-block" alt="фото книги ">
                </figure>
            </div>
            <div class="col mr-auto">
                {{this.title}}
            </div>
            <div class="col- mr-5">
                {{this.price}}
            </div>
            <div class="col- mx-2">
                <input class="btn btn-primary" type="button" onclick="deleteOffBook({{this.idBook}})"
                    value="Удалить с платформы">
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="row alert alert-primary">
            <div class="col text-center">
                У Вас нет книг для удаления :-(
            </div>
        </div>
        {{/if}}
    </div>
</div>