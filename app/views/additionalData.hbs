<div class="row">
    <div class="col-3">
        <label>Пароль</label><input name="password" class="form-control" value="" placeholder="********" />
    </div>
    <div class="col-3"></div>
    <div class="col-3">
        <label>Фото</label>
        <input class="form-control-sm form-control-file" type="file" name="filedata" multiple="1"
            formenctype="multipart/form-data" />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <label>Страна</label><input name="country" class="form-control" value="{{UsersDate.seller.country}}" />
        <label>Город</label><input name="city" class="form-control" value="{{UsersDate.seller.city}}" />
    </div>
    <div class="col-6">
        <label>Почтовый индекс</label><input name="postcode" class="form-control"
            value="{{UsersDate.seller.postcode}}" />
        <label>Телефон</label><input name="telephone" class="form-control" value="{{UsersDate.seller.telephone}}" />
    </div>
</div>
<div class="row mt-3">
    <div class="col-6">
        <h5>Продавец</h5>
        <label>Регион</label><input name="regionSellers" class="form-control" value="{{UsersDate.seller.region}}" />
        <label>Дополнительная информация</label>
        <textarea class="form-control" name="InformationAdditionalSellers"
            rows="3">{{UsersDate.seller.InformationAdditional}}</textarea>
    </div>
    <div class="col-6">
        <h5>Покупатель</h5>
        <label>фамилия</label><input name="lastNameBuyers" class="form-control" value="{{UsersDate.buyer.lastName}}" />
        <label>имя</label><input name="nameBuyers" class="form-control" value="{{UsersDate.buyer.name}}" />
        <label>отчество</label><input name="patronymicBuyers" class="form-control"
            value="{{UsersDate.buyer.patronymic}}" />
        <label>адрес</label><input name="addressBuyers" class="form-control" value="{{UsersDate.buyer.address}}" />
    </div>
</div>