<div class="row">
    <form id="formi" name="formi">
        <div class="col-9">
            <div class="row">
                <h3>Способ оплаты</h3>
            </div>
            {{#if Books}}
            <div class="row">
                <div class="col-9">
                    <div class="row mt-4 mb-0">
                        <div class="col form-check px-5">
                            <input class="form-check-input" type="checkbox" id="all" style="transform: scale(2);"> Все
                        </div>
                    </div>
                    {{#each Books}}
                    <div class="row align-items-center mt-4 py-2"
                        style="border: 2px solid #dee2e6; background-color: #e3effd;">
                        <div class="col-">
                            <figure class="figureIndex rounded mx-auto d-block">
                                <img src="../{{this.photoBooks.0.URL}}" class="rounded mx-auto d-block"
                                    alt="фото книги ">
                            </figure>
                        </div>
                        <div class="col mr-auto">
                            {{this.title}}
                        </div>
                        <div class="col-">
                            {{this.price}}
                        </div>
                        <div class="col- mx-2">
                            <input class="btn btn-primary" type="button" onclick="paymentchooseMethod({{this.idBook}})"
                                value="Добавить метод">
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="col">
                    Способы оплаты
                    <select class="form-control mt-1" name="paymentMethods" class="field" multiple>
                        {{#select PaymentMethod}}
                        {{#each PaymentMethod}}
                        <option value="{{this.idPayment}}">{{this.title}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </div>
            </div>
            {{else}}
            <div class="row alert alert-primary">
                <div class="col text-center">
                    У Вас нет добавленных книг :-(
                </div>
            </div>
            {{/if}}
        </div>
    </form>
</div>