                            {{/if}}
                            <a class="dropdown-item" href="/user/cart">Корзина</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Выход</a>
                        </div>
                        {{else}}
                        <a href="/signup" style="margin-right: 40px;">Регистрация</a>
                        <a href="/signin">Вход</a>
                        {{/if}}
                    </div>
                </div>
                <div class="row" style=" padding: 10px; border-bottom:2px solid #8ec6f3;">
                    <div class="col-4"></div>
                    <div class="col">
                        <div class="search">
                            {{#if homeSearch}}
                            <input type="text" name="search" placeholder="Поиск" value="{{homeSearch}}">
                            {{else}}
                            <input type="text" name="search" placeholder="Поиск">
                            {{/if}}
                            <button onclick="searchButton();return false;"></button>
                        </div>

                    </div>
                    <div class="col-4" style="text-align:right;padding-right:50px;">
                        <a href="/user/cart" class="cart"><i class="fa fa-shopping-basket fa-2x"
                                aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>